{
  "name": "utilities-v2",
  "version": "0.0.1",
  "description": "",
  "author": "hung3a8",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:main": "yarn dev --filter user --filter auth --filter admin-panel",
    "format": "prettier --write .",
    "lint": "turbo run lint",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/core/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/core/test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.4",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.2.0",
    "argon2": "^0.40.1",
    "axios": "^1.6.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "formdata-node": "^6.0.3",
    "ip": "^1.1.8",
    "lodash": "^4.17.21",
    "mongodb": "^6.8.0",
    "mongoose": "^8.0.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "ping": "^0.4.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "video.js": "^8.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cookie-parser": "^1",
    "@types/express": "^4.17.21",
    "@types/ip": "^1.1.3",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/passport-jwt": "^4.0.0",
    "@types/ping": "^0.4.4",
    "@types/supertest": "^6.0.0",
    "@types/video.js": "^7.3.56",
    "cross-env": "7.0.3",
    "husky": "^8",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "0.5.11",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "swagger-typescript-api": "^13.0.14",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.16.2",
    "turbo": "^1.13.3",
    "typescript": "^5.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/api(|/.*)$": "<rootDir>/libs/api/src/$1",
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/common-db(|/.*)$": "<rootDir>/libs/common-db/src/$1",
      "^@app/utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
    }
  },
  "lint-staged": {
    "{apps,libs,scripts}/**/*.ts": [
      "biome check --fix"
    ]
  },
  "packageManager": "yarn@4.1.1"
}
