{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "outDir": "./dist",
    "paths": {
      "~/*": ["src/*"],
      "@libs/api": ["../../libs/api/src"],
      "@libs/api/*": ["../../libs/api/src/*"],
      "@libs/common": ["../../libs/common/src"],
      "@libs/common/*": ["../../libs/common/src/*"],
    },
    "isolatedModules": true
  },
  "include": ["./src/typed-router.d.ts", "./src/**/*.ts", "./src/**/*.vue", "./src/auto-imports.d.ts", "./src/components.d.ts"],
  "exclude": ["dist", "node_modules", "cypress"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
