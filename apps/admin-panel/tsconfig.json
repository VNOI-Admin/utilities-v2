{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "paths": {
      "~/*": ["src/*"],
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "server.cjs"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
